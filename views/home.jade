extends layout

block content
  #upload.upload.clearfix
    .avatar-wrap.clearfix
      img#avatar(src="about:blank", alt="").avatar
    form#uploadForm(action="/register", method="POST", enctype="multipart/form-data", name="uploadForm")
      #upload-section.upload-section.clearfix
        span.text 
          i.fa.fa-camera
          |Capture Me
        input#camera.camera(type="file",accept="image/*",capture="camera",name="avatar")
      input(type="hidden", name="latitude")
      input(type="hidden", name="longitude")
      button.btn.btn-danger.hidden(type="Submit") Capture Me
    #error.error

block js
  script(src="/js/camera.js")